<h1>Edit Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username,class: "form-control" %>
      </div>

      <%= f.submit "Save Changes", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
